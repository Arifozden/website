<%- include('partials/_header'); %>

<%- include('partials/_navigation'); %>
	
	
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= product.name  %></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<% if(user && !(user.products.includes(product._id))) { %>
							<div class="post-date">
								<form method="POST" action="/products/cart">
									<input type="hidden" name="product_id" value="<%= product._id %>">
									<button type="submit" class="btn btn-lg btn-warning text-white"><span>Add to Cart</span></button>
								</form>
							</div>
							<% } %>
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a href="#">May 11, 2015</a> </span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= product.name  %></a></h2>
							</div>
							<div class="blog-desc">
								
								<blockquote class="default">
									<%= product.description  %>
								</blockquote>
                                <blockquote class="default">
									<%= product.price  %>
								</blockquote>
								
							</div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"><%= product.user.name %></a></h3>
						</div>
					</div>
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form method="GET" id="site-searchform" action="/products">
								<div>
									<input class="input-text form-control" name="search" id="search-k" placeholder="Search..." type="text">
									<button id="searchsubmit" value="Search" type="submit"></button>
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<% for(let i=0;i<categories.length;i++){ %>
							<li><a href="/products?categories=<%= categories[i].slug %>"><%= categories[i].name %></a></li>
							<% } %> 
						</ul>
					</div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
	<%- include('partials/_footer'); %>