@model CreateOrderQuestionViewModel

<h2>Create New Order Question</h2>

<form asp-action="CreateOrderQuestion">
    <div class="form-group">
        <label asp-for="OrderQuestion.QuestionId"></label><span class="text-danger">*</span>
        <select asp-for="OrderQuestion.QuestionId" asp-items="Model.QuestionSelectList" class="form-control">
            <option value="">Select an item...</option>
        </select>
        <span asp-validation-for="OrderQuestion.QuestionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderQuestion.Quantity"></label>
        <input asp-for="OrderQuestion.Quantity" class="form-control" />
        <span asp-validation-for="OrderQuestion.Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderQuestion.OrderId"></label>
        <select asp-for="OrderQuestion.OrderId" asp-items="Model.OrderSelectList" class="form-control">
            <option value="">Select an order...</option>
        </select>
        <span asp-validation-for="OrderQuestion.OrderId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Table" class="btn btn-secondary">Back to Order Table</a>
</form>