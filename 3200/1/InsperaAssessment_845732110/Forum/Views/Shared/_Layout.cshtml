<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="lib/jquery/dist/jquery.js"></script>
    <link href="css/site.css"/>
    <script src="js/site.js"></script>
    <style>
        .buton {
            background-color: lightseagreen; 
            color: black; 
            text-decoration: none; 
        }

        .buton:hover {
            background-color: lightblue;
            color: white;
        }

        .fotbuton {
            background-color: lightseagreen;
            color: black;
            text-decoration: none;
            font-size: 10px
        }

            .fotbuton:hover {
                background-color: darkcyan;
                color: white;
            }
    </style>
    </head>
<body>
<header>
        <div style="background-color: lightseagreen">
    <div class="container" >
                <nav class="navbar navbar-expand-sm navbar-light" style="background-color: lightseagreen; position: fixed;
                                                                         top: 0;
                                                                         left: 0;
                                                                         width: 100%;
                                                                         padding: 10px;">
            <div class="container">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="badge bg-success">IT-Future - Here all you need!</span>
                        </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" >
                    <span class="navbar-toggler-icon"></span>
                </button>

                        <div class="collapse navbar-collapse justify-content-between" id="navbarColor03">
                            <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link buton" asp-area="" asp-controller="Questions" asp-action="Index"
                                       style="text-decoration: none; color: initial; font-weight: bold;" onmouseover="this.style.color='darkmagenta';" onmouseout="this.style.color='initial';">Questions</a>
                        </li>
                        <li class="nav-item">
                                    <a class="nav-link buton" asp-area="" asp-controller="Questions" asp-action="Create"
                                       style="text-decoration: none; color: initial; font-weight: bold;" onmouseover="this.style.color='darkmagenta';" onmouseout="this.style.color='initial';">Ask a question</a>
                        </li>
                                <li class="nav-item">
                                    <a class="nav-link buton" asp-area="" asp-controller="Home" asp-action="About"
                                       style="text-decoration: none; color: initial; font-weight: bold;" onmouseover="this.style.color='darkmagenta';" onmouseout="this.style.color='initial';">About Us</a>
                                </li>
                                

                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </div>
        </div>
</header>

    <div class="container" style="margin-top: 70px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted" style="position: fixed;
                                                        bottom: 1px;
                                                        width: 100%; background-color: lightseagreen;
                                                        color: darkblue; margin-top: 5px;                                                        padding: 7px; 
                                                        text-align: center;">
        <div class="container">
            <span style="font-size: 10px">&copy; 2023 - </span><a asp-area="" asp-controller="Home" asp-action="Index" class="fotbuton">IT-Future Forums</a> -
            <a asp-area="" asp-controller="Questions" asp-action="Index" class="fotbuton">Questions</a> -
            <a asp-area="" asp-controller="Questions" asp-action="Create" class="fotbuton">Ask a question</a> -
            <a asp-area="" asp-controller="Home" asp-action="About" class="fotbuton">About Us</a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
