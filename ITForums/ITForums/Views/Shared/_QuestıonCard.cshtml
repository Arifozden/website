@model Question

<div class="col">
    <div>
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
        <div class="card-body pie-button">
            <div class="d-flex justify-content-between mt-2">
                <h5 class="text-start">
                    <a asp-controller="Question"
                       asp-action="Details"
                       asp-route-id="@Model.Id">@Model.Title</a>
                </h5>
                <h5 class="text-nowrap">
                    @Model.Description
                </h5>
            </div>
        </div>
    </div>
</div>