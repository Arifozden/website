@model IEnumerable<Question>

<div class="container">
    <table class='table table-striped'>
        <tr><th>Id</th><th>Title</th><th>Description</th><th>Images</th><th>Actions</th>
            <!--<th>IdentityUserId</th><th>User</th><th>Answers</th>-->
        </tr>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Id</td>
                <td>
                    <a asp-controller="Question"
                       asp-action="Details"
                       asp-route-id="@question.Id">@question.Title</a>
                </td>
                <td>@question.Description</td>
                <td><img src="@question.ImageUrl" alt="Question Image" style="max-width: 80px;max-height: 80px"/></td>
                <td>
                    <a asp-action="Update" asp-route-id="@question.Id">Update</a>
                    <a asp-action="Delete" asp-route-id="@question.Id">Delete</a>
                </td>
                <!--<td>question.IdentityUserId</td><td>question.User</td><td>question.Answers</td>-->
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-secondary"
           asp-controller="Question"
           asp-action="Create">Create New Question</a>
    </p>
</div>