@page
@using Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Manage.Internal;
@model IndexModel

<div class="container">
    <h1 class="text-center mt-5">Welcome to IT-Future Forums!</h1>
    <h4 class="text-center">
        <a href="@Url.Action("Index","Questions")" style="color: black">Find</a>
         information you need!</h4>
    <h4 class="text-center">Couldn't find? Ask it <a href="@Url.Action("Create", "Questions")" style="color: black">now</a>!</h4>
    
    <div class="row mt-4">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body" align="center">
                    <p class="card-text">Scroll through the questions asked by others and see the answers.</p>
                    <button onclick="window.location.href='/Questions/Index'" class="btn btn-outline-info border-info">View Questions</button>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body" align="center">
                    <p class="card-text">Ask your own questions and get answers from other users.</p>
                    <button onclick="window.location.href='/Questions/Create'" class="btn btn-outline-secondary border-secondary">Ask a Question</button>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
<div class="container" style="width: 800px; height: 600px; margin-top: 11px"><partial name="_Carousel" /></div>


