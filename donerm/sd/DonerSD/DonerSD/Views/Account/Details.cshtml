@using DonerSD.Entity
@using DonerSD.Models
@model DonerSD.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            
            <h2>Order Detaljer</h2>
            <hr/>
            
            <dl class="row">
                
                <dt class="col-sm-3">Order Status</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == EnumOrderState.Waiting)
                    {
                        <span class="badge bg-warning" style="color:black">@Model.OrderState</span>
                    }
                    else if (Model.OrderState == EnumOrderState.Sent)
                    {
                        <span class="badge bg-info">@Model.OrderState</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@Model.OrderState</span>
                    }
                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">@Model.Total NOK</dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>

                <dt class="col-sm-3">Adresse</dt>
                <dd class="col-sm-9">@Model.AdresseTittel
                    <hr/>
                    @Model.Adresse
                    <br/>
                    @Model.PostNummer - @Model.PostSted
                    <br/>
                    @Model.Kommune
                    </dd>
                
                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width: 15%;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Orderlines)
                            {
                                <tr>
                                    <td>
                                        <img src="/Upload/@item.Image" width="75px" />
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price NOK</td>
                                    <td><a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                            Product Details&nbsp;<i class="fa fa-angle-double-right"></i>
                                    </a></td>
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                        <td colspan="3">Total</td>
                        <td></td>
                        <td></td>
                        </tfoot>
                    </table>
                </dd>

            </dl>
        </div>
    </div>
</div>

