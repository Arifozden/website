@model Question

<h2>Delete Question</h2>

<h3>Are you sure you want to delete this question?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Item Id</dt>
        <dd class="col-sm-10">@Model.QuestionId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        
        <dt class="col-sm-2">AuthorId</dt>
        <dd class="col-sm-10">@Model.AuthorId</dd>
        
        <dt class="col-sm-2">Answers</dt>
        <dd class="col-sm-10">@Model.Answers</dd>

        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.QuestionId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Question" class="btn btn-secondary">Cancel</a>
    </form>
</div>