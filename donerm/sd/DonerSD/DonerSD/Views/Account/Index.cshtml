@using DonerSD.Entity
@model IEnumerable<DonerSD.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Order Informasjon</h2>
            <hr/>
            
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>Order Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>@item.Total NOK</td>
                        <td>@if (item.OrderState == EnumOrderState.Waiting)
                            {
                                <span class="badge bg-warning" style="color:black">@item.OrderState</span>
                            }
                            @if (item.OrderState == EnumOrderState.Sent)
                            {
                                <span class="badge bg-info">@item.OrderState</span>
                            }
                            @if (item.OrderState == EnumOrderState.Completed)
                            {
                                <span class="badge bg-success">@item.OrderState</span>
                            }
                            </td>
                        <td>
                            @Html.ActionLink("Detaljer","Details",new {id=@item.Id},new {@class="btn btn-primary"})
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

